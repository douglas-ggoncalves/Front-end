/* ---------- Colors ---------- */
blue-color = #2693FF
lightBlue-color = #E9F4FB
darkBlue-color = #1182F2;
white-color = #FFFFFF
gray-color = #BFDAEB
darkGray-color = #77899E
lightGray-color = #F4FBFF
lightGray2-color = #E2EEF5
green-color = #1AD18F
greenDark-color = #5ECDA5
red-color = #FF4874
red2-color = #F491BA
orange-color = #FFC42E
/* ---------- End Colors ---------- */


/* ---------- Fonts ---------- */
@font-face{
  font-family Gilroy Black
  font-style normal
  src url('../fonts/SVN-Gilroy Black.ttf')
}

@font-face{
  font-family Gilroy Bold
  font-style normal
  src url('../fonts/SVN-Gilroy Bold.ttf')
}

@font-face{
  font-family Gilroy Italic
  font-style normal
  src url('../fonts/SVN-Gilroy Italic.ttf')
}

@font-face{
  font-family Gilroy Light
  font-style normal
  src url('../fonts/SVN-Gilroy Light.ttf')
}

@font-face{
  font-family Gilroy Medium
  font-style normal
  src url('../fonts/SVN-Gilroy Medium.ttf')
}

@font-face{
  font-family Gilroy Regular
  font-style normal
  src url('../fonts/SVN-Gilroy Regular.ttf')
}

@font-face{
  font-family Gilroy SemiBold
  font-style normal
  src url('../fonts/SVN-Gilroy SemiBold.ttf')
